<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Назад бутон -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_previous"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"/>

        <!-- Име и клас на героя -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lyonel Soutmight"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Human | Bard 20"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="10dp"/>

        <!-- Профилна снимка -->


        <!-- Живот (HP) -->

        <!-- Статистики -->

        <ImageView
            android:id="@+id/imgCharacter"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/rounded_pfp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tasha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="5dp"
            android:padding="8dp"
                android:text="   123/123 \nHIT POINTS"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="center"
                android:cornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+6 "
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Bonus"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="center"
                android:cornerRadius="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 ft. "
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="center"
                android:cornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5 "
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Initiative"
                    android:textSize="12sp"
                    android:textColor="#B0B0B0"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Бутон за способности -->
        <Button
            android:id="@+id/btnAbilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abilities, Saves, Senses"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            android:layout_marginBottom="16dp"/>

        <!-- Способности -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="center"
                android:cornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STR\n+0"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="center"
                android:cornerRadius="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEX\n+2"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="center"
                android:cornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CON\n+1"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Бутон за връщане в менюто -->
        <Button
            android:id="@+id/btnBackToMainFromCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#E53935"/>
    </LinearLayout>
</ScrollView>
